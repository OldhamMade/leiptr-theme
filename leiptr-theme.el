       `(magit-log-sha1 ((,class (:foreground ,leiptr-red-0))))
       `(magit-log-head-label-local ((,class (:foreground ,leiptr-fg))))
       `(magit-whitespace-warning-face ((,class (:background ,leiptr-red-1))))
       `(match ((,class (:background ,leiptr-red-1))))
       `(minibuffer-prompt ((,class (:foreground ,leiptr-blue-1))))
       `(mode-line ((,class (:foreground ,leiptr-fg :background ,leiptr-grey-2))))
       `(mode-line-inactive ((,class (:foreground ,leiptr-grey-1 :background ,leiptr-grey-3))))
       `(org-checkbox ((,class (:foreground ,leiptr-green-0))))
       `(org-date ((,class (:foreground ,leiptr-purple-0))))
       `(org-done ((,class (:foreground ,leiptr-green-0))))
       `(org-level-1 ((,class (:foreground ,leiptr-slate-0))))
       `(org-level-2 ((,class (:foreground ,leiptr-slate-1))))
       `(org-level-3 ((,class (:foreground ,leiptr-slate-2))))
