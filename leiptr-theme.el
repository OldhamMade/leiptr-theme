      (leiptr-slate-2 "#527ACC")
      (leiptr-slate-3 "#476BB2")
      (leiptr-slate-4 "#3D5C99")
      (leiptr-green-0 "#53b441")
      (leiptr-green-1 "#447799")
      (leiptr-green-2 "#a8ff60")
      (leiptr-green-3 "#4eafb7")
      (leiptr-green-4 "#2F696E")
      (leiptr-grey-0 "#888888")
      (leiptr-grey-1 "#5e5e5e")
      (leiptr-grey-2 "#4a4a4a")
      (leiptr-grey-3 "#1c1c1c")
      (leiptr-grey-4 "#363636")
      (leiptr-orange-0 "#ddb540")
      (leiptr-orange-1 "#e6a00f")
      (leiptr-orange-2 "#e27c34")
      (leiptr-purple-0 "#8197bf")
      (leiptr-purple-1 "#474e90")
      (leiptr-purple-2 "#aa00aa")
      (leiptr-purple-3 "#740073")
